<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stats">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="84dp"
        android:layout_height="74dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars[3]" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="219dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/stepsToday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Steps Taken Today"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/numberOfSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/CaloriesBurnedToday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calories Burned Today"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/numberOfCaloriesBurned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/DistanceTraveledToday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance Traveled Today"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/distanceTraveledNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textSize="18sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>