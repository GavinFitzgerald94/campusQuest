<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/avatar_lara"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/avatar_lara" />
    </LinearLayout>


    <Spinner
        android:id="@+id/spinner_attributes"
        android:layout_width="195dp"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/level_label"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:text="Level"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/level_value"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:text="80"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/strength_label"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:text="Strength"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/strength_value"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/endur_label"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:text="Endurance"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/endur_value"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="9"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>