<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.campusquest">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    //Put in sensor requirements here.
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SignIn"
            android:label="Sign In">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUp"
            android:label="Sign Up" />
        <activity android:name=".MainActivity"/>
        <activity android:name=".DisplaySteps" />
        <activity
            android:name=".TreasureHunt"
            android:label="@string/title_activity_treasure_hunt"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".stats"></activity>
        <activity
            android:name=".TreasureHuntHome"
            android:label="@string/title_activity_treasure_hunt_home"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".TreasureHuntNoFitTest"
            android:label="@string/title_activity_treasure_hunt_no_fit_test"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>